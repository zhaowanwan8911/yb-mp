<view class="home-ctn">
  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="item">
      <swiper-item>
        <image src="{{item}}" class="slideImage" />
      </swiper-item>
    </block>
  </swiper>
  <view style='margin-top: 40rpx;'></view>
  <view class="record-wrap" wx:for="{{records}}" wx:key="name" wx:for-item="record">
    <view class="left-wrap">
      <image src="{{record.painting}}"></image>
    </view>
    <view class="right-wrap">
      <text>作者：{{record.Student.name || '小画家'}}</text>
      <text>作品：{{record.Course.subject}}</text>
      <text>日期：{{record.date}}</text>
      <text>评价：{{record.remark}}</text>
    </view>
  </view>
</view>
