.record-wrap {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 240rpx;
  margin: 20rpx 35rpx;
}

.left-wrap {
  flex: 1;
}

.left-wrap image {
  width: 100%;
  height: 100px;
}

.right-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 35rpx;
}